doctype html
html(lang="en")
    head
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        title #{pageTitle} 
    body
        header
            if fakeUser.loggedIn
                small #{fakeUser.username} Hello~
            nav
                ul 
                    if fakeUser.loggedIn
                        li
                            a(href="/logout") Log out
                    else
                        li
                            a(href="/login") Login    
            h1=pageTitle
        main
            block content 

    include partials/footer